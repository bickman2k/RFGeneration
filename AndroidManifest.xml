<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.jgrue.rfgeneration"
      android:versionCode="3"
      android:versionName="1.2">
    <uses-sdk android:minSdkVersion="3" android:targetSdkVersion="4"/>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application android:icon="@drawable/ic_launcher_template" android:label="@string/app_name">
        <activity android:name=".RFGenerationActivity"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.NoTitleBar"
                  android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Collection" android:theme="@android:style/Theme.NoTitleBar" android:label="@string/app_name"></activity>
        <activity android:theme="@android:style/Theme.NoTitleBar" android:name=".CollectionListActivity" android:label="@string/app_name"></activity>
        <activity android:name=".GameInfoActivity" android:theme="@android:style/Theme.NoTitleBar" android:label="@string/app_name"></activity>
        <activity android:name=".GameInfoWidget" android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar"></activity>
        <activity android:name=".GameCredits" android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar"></activity>
        <activity android:theme="@android:style/Theme.NoTitleBar" android:name=".SearchListActivity" android:label="@string/app_name"></activity>
    </application>
</manifest>