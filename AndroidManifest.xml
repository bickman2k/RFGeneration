<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jgrue.rfgeneration"
    android:versionCode="8"
    android:versionName="2.3" >

    <uses-sdk android:minSdkVersion="4" />
    
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:label="@string/app_name"
            android:name=".RFGenerationActivity" 
            android:windowSoftInputMode="stateHidden"
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" android:theme="@android:style/Theme.NoTitleBar" android:label="@string/app_name" android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name=".LoadCollectionActivity" android:theme="@android:style/Theme.NoTitleBar" android:label="@string/app_name" android:configChanges="keyboardHidden|orientation"></activity>
        <activity android:name=".SearchListActivity" android:theme="@android:style/Theme.NoTitleBar" android:label="@string/app_name"></activity>
        <activity android:name=".CollectionListActivity" android:theme="@android:style/Theme.NoTitleBar" android:label="@string/app_name"></activity>
        <activity android:name=".GameInfoActivity" android:theme="@android:style/Theme.NoTitleBar" android:label="@string/app_name"></activity>
        <activity android:name=".WebViewActivity" android:theme="@android:style/Theme.NoTitleBar" android:label="@string/app_name"></activity>
        <provider android:name=".data.RFGenerationProvider" android:authorities="com.jgrue.rfgeneration.data.RFGenerationProvider" android:multiprocess="true"></provider>
        <service android:name=".service.RFGenerationService"></service>
    </application>

</manifest>
