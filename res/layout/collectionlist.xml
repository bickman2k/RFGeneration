  <TableLayout android:layout_width="fill_parent" 
    android:background="#ff808080" 
    android:id="@+id/HeaderLayout" android:layout_height="wrap_content" android:layout_gravity="top"
    android:stretchColumns="1" android:shrinkColumns="1">
    <TableRow>
    <TextView android:id="@+id/PrevPage2" 
    android:layout_height="wrap_content" android:text="Prev Page" 
    android:layout_width="wrap_content" 
    android:background="@drawable/text_bg_color" android:textColor="@drawable/text_color" 
    android:textStyle="bold"
    android:layout_margin="1dp"
    android:padding="5dip" 
    android:clickable="true" android:layout_gravity="center_vertical" android:visibility="gone"></TextView>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
     android:layout_gravity="center_vertical" android:background="#ffcc0000" 
     android:layout_marginTop="1dp" android:layout_marginBottom="1dp" >
    <TextView android:id="@+id/CurrentPage" 
    android:layout_height="wrap_content"
    android:layout_width="fill_parent" 
    android:background="@drawable/text_bg_color" android:textColor="@drawable/text_color" 
    android:textStyle="bold"
    android:padding="5dip" 
    android:clickable="true" android:gravity="center"></TextView>
    </LinearLayout>
    <TextView android:id="@+id/NextPage2" 
    android:layout_height="wrap_content" 
    android:text="Next Page" android:layout_width="wrap_content"
    android:background="@drawable/text_bg_color" android:textColor="@drawable/text_color" 
    android:textStyle="bold"
    android:layout_margin="1dp"
    android:padding="5dip" 
    android:clickable="true" android:layout_gravity="center_vertical" android:visibility="gone"></TextView>
    </TableRow>
  </TableLayout>
  
  <ListView
    android:id="@+id/android:list"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:cacheColorHint="#00000000" 
    android:divider="#ff808080"
    android:dividerHeight="1dp"
    android:fastScrollEnabled="true"
    />
  
</LinearLayout>
