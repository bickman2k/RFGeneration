<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#eeeeee"
  android:orientation="vertical">
<LinearLayout 
    android:layout_width="fill_parent" 
    android:background="@drawable/bg" 
    android:layout_height="wrap_content" android:layout_gravity="top">
    <ImageView 
      android:src="@drawable/left"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  </LinearLayout>
  
  <LinearLayout android:layout_width="fill_parent" 
    android:background="#ff808080" 
    android:id="@+id/HeaderLayout" android:layout_height="wrap_content">

    <TextView android:id="@+id/DetailDetail" 
    android:layout_height="wrap_content" android:text="Detail" 
    android:layout_width="fill_parent" 
    android:background="@drawable/text_bg_color" android:textColor="@drawable/text_color" 
    android:textStyle="bold"
    android:layout_margin="1px" android:layout_weight="1"
    android:padding="5dip" android:gravity="center" 
    android:clickable="true" android:layout_gravity="center_vertical"></TextView>
<!--     <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
     android:layout_gravity="center_vertical" android:background="#ffcc0000" 
     android:layout_marginTop="1px" android:layout_marginBottom="1px" > -->
    <TextView android:id="@+id/DetailImages" android:text="Images" 
    android:layout_height="wrap_content"
    android:layout_width="fill_parent" 
    android:background="@drawable/text_bg_color" android:textColor="@drawable/text_color" 
    android:textStyle="bold" android:layout_marginTop="1px" android:layout_marginBottom="1px"
    android:padding="5dip" android:layout_weight="1"
    android:clickable="true" android:gravity="center" android:layout_gravity="center_vertical"></TextView>
<!--     </LinearLayout> -->
    <TextView android:id="@+id/DetailCredits" 
    android:layout_height="wrap_content" 
    android:text="Credits" android:layout_width="fill_parent"
    android:background="@drawable/text_bg_color" android:textColor="@drawable/text_color" 
    android:textStyle="bold"
    android:layout_margin="1px" android:layout_weight="1"
    android:padding="5dip" android:gravity="center" 
    android:clickable="true" android:layout_gravity="center_vertical"></TextView>

  </LinearLayout>
  
<ScrollView
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" 
  android:visibility="gone"
  android:id="@+id/gameDetailScrollView">

<LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical">
  
	<LinearLayout
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
	  android:orientation="vertical"
	  android:id="@+id/gameDetailLayout"
	  android:visibility="gone">
    
	    <TextView 
	      android:text="Title [Variant]" 
	      android:id="@+id/gameDetailTitle" 
	      android:layout_width="wrap_content" 
	      android:layout_height="wrap_content"
	      android:textColor="#ffcc0000" android:paddingRight="10dip"
	      android:textSize="25sp"
	      android:layout_marginLeft="5dip" android:layout_marginBottom="2dip" android:layout_marginRight="5dip"
	      ></TextView>
	      
	    <View
	      android:layout_width="fill_parent"
	      android:layout_height="1px"
	      android:background="#ff808080"
	      android:layout_marginBottom="10dip"
	      android:layout_marginLeft="5dip"
	      android:layout_marginRight="5dip"
	      ></View>
	      
	    <TableLayout
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:stretchColumns="1"
	      android:shrinkColumns="1" 
	      android:layout_marginLeft="5dip" android:layout_marginRight="5dip">
	      <TableRow>
	        <TextView 
		      android:text="Alternate Title:" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:textColor="#ffcc0000" android:textStyle="bold" android:paddingRight="10dip"
		      ></TextView>
		    <TextView 
		      android:text="AlternateTitle" 
		      android:id="@+id/gameDetailAlternateTitle" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:textColor="#ff000000"
		      ></TextView>
	      </TableRow>
	      <TableRow>
	        <TextView 
		      android:text="Console:" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:textColor="#ffcc0000" android:textStyle="bold" android:paddingRight="10dip"
		      ></TextView>
		    <TextView 
		      android:text="Console" 
		      android:id="@+id/gameDetailConsole" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:textColor="#ff000000"
		      ></TextView>
	      </TableRow>
	      <TableRow>
	        <TextView 
		      android:text="Region:" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:textColor="#ffcc0000" android:textStyle="bold" android:paddingRight="10dip"
		      ></TextView>
	        <ImageView
	          android:id="@+id/gameDetailRegion"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:src="@drawable/regions_u" android:layout_gravity="left"/>
	      </TableRow>
	      <TableRow>
	        <TextView 
		      android:text="Year:" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:textColor="#ffcc0000" android:textStyle="bold" android:paddingRight="10dip"
		      ></TextView>
		    <TextView 
		      android:text="Year" 
		      android:id="@+id/gameDetailYear" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:textColor="#ff000000"
		      ></TextView>
	      </TableRow>
	      <TableRow>
	        <TextView 
		      android:text="RFG ID #:" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:textColor="#ffcc0000" android:textStyle="bold" android:paddingRight="10dip"
		      ></TextView>
		    <TextView 
		      android:text="RFGID" 
		      android:id="@+id/gameDetailRFGID" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:textColor="#ff000000"
		      ></TextView>
	      </TableRow>
	      <TableRow>
	        <TextView 
		      android:text="Part #:" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:textColor="#ffcc0000" android:textStyle="bold" android:paddingRight="10dip"
		      ></TextView>
		    <TextView 
		      android:text="Part" 
		      android:id="@+id/gameDetailPart" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:textColor="#ff000000"
		      ></TextView>
	      </TableRow>
	      <TableRow>
	        <TextView 
		      android:text="UPC:" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:textColor="#ffcc0000" android:textStyle="bold" android:paddingRight="10dip"
		      ></TextView>
		    <TextView 
		      android:text="UPC" 
		      android:id="@+id/gameDetailUPC" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:textColor="#ff000000"
		      ></TextView>
	      </TableRow>
	      <TableRow>
	        <TextView 
		      android:text="Publisher:" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:textColor="#ffcc0000" android:textStyle="bold" android:paddingRight="10dip"
		      ></TextView>
		    <TextView 
		      android:text="Publisher" 
		      android:id="@+id/gameDetailPublisher" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:textColor="#ff000000"
		      ></TextView>
	      </TableRow>
	      <TableRow>
	        <TextView 
		      android:text="Developer:" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:textColor="#ffcc0000" android:textStyle="bold" android:paddingRight="10dip"
		      ></TextView>
		    <TextView 
		      android:text="Developer" 
		      android:id="@+id/gameDetailDeveloper" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:textColor="#ff000000"
		      ></TextView>
	      </TableRow>
	      <TableRow>
	        <TextView 
		      android:text="Rating:" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:textColor="#ffcc0000" android:textStyle="bold" android:paddingRight="10dip"
		      ></TextView>
		    <TextView 
		      android:text="Rating" 
		      android:id="@+id/gameDetailRating" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:textColor="#ff000000"
		      ></TextView>
	      </TableRow>
	      <TableRow>
	        <TextView 
		      android:text="Genre:" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:textColor="#ffcc0000" android:textStyle="bold" android:paddingRight="10dip"
		      ></TextView>
		    <TextView 
		      android:text="Genre" 
		      android:id="@+id/gameDetailGenre" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:textColor="#ff000000"
		      ></TextView>
	      </TableRow>
	      <TableRow>
	        <TextView 
		      android:text="Sub-genre:" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:textColor="#ffcc0000" android:textStyle="bold" android:paddingRight="10dip"
		      ></TextView>
		    <TextView 
		      android:text="Sub-genre" 
		      android:id="@+id/gameDetailSubgenre" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:textColor="#ff000000"
		      ></TextView>
	      </TableRow>
	      <TableRow>
	        <TextView 
		      android:text="Players:" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:textColor="#ffcc0000" android:textStyle="bold" android:paddingRight="10dip"
		      ></TextView>
		    <TextView 
		      android:text="Players" 
		      android:id="@+id/gameDetailPlayers" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:textColor="#ff000000"
		      ></TextView>
	      </TableRow>
	      <TableRow>
	        <TextView 
		      android:text="Controller:" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:textColor="#ffcc0000" android:textStyle="bold" android:paddingRight="10dip"
		      ></TextView>
		    <TextView 
		      android:text="Controller" 
		      android:id="@+id/gameDetailController" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:textColor="#ff000000"
		      ></TextView>
	      </TableRow>
	      <TableRow>
	        <TextView 
		      android:text="Media Format:" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:textColor="#ffcc0000" android:textStyle="bold" android:paddingRight="10dip"
		      ></TextView>
		    <TextView 
		      android:text="MediaFormat" 
		      android:id="@+id/gameDetailMediaFormat" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:textColor="#ff000000"
		      ></TextView>
	      </TableRow>
	    </TableLayout>
  
	</LinearLayout>
	


	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:id="@+id/gameCreditsLayout"
	    android:padding="5dip"
	    android:orientation="vertical"
	    android:visibility="gone">
	</LinearLayout>
  
  </LinearLayout>
</ScrollView>

	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:id="@+id/gameImagesLayout"
	    android:padding="5dip"
	    android:orientation="vertical"
	    android:gravity="center"
	    android:visibility="gone">
	    
   	    <TableLayout android:id="@+id/tableLayout1" android:layout_width="fill_parent" android:layout_height="fill_parent"
   	    android:stretchColumns="1" android:shrinkColumns="1" android:layout_marginBottom="20dip">
	        <TableRow android:layout_weight="1" android:id="@+id/tableRow1" android:layout_width="fill_parent" android:layout_height="fill_parent">
		        <ImageButton android:src="@drawable/ic_media_play_flip" android:layout_width="wrap_content" android:id="@+id/gameImagesLeft" android:layout_height="wrap_content" android:background="#00000000" android:layout_gravity="center_horizontal|center_vertical"></ImageButton>
		            <com.jgrue.rfgeneration.LoaderImageView
				       android:id="@+id/gameImagesImage"
				       android:layout_width="wrap_content"
				       android:layout_height="wrap_content"
				       android:layout_gravity="center_horizontal|center_vertical"
				       />
		        <ImageButton android:src="@drawable/ic_media_play" android:layout_width="wrap_content" android:id="@+id/gameImagesRight" android:layout_height="wrap_content" android:background="#00000000" android:layout_gravity="center_horizontal|center_vertical"></ImageButton>
	        </TableRow>
	    </TableLayout>
	    
	    <TextView
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:id="@+id/gameImagesText"
	    	android:gravity="center"
	    	android:textColor="#ff000000" android:layout_gravity="bottom" android:layout_alignParentBottom="true" ></TextView>
	   
	</RelativeLayout>
	
	<LinearLayout android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:id="@+id/gameErrorLayout"
	    android:padding="5dip"
	    android:orientation="vertical"
	    android:gravity="center"
	    android:visibility="gone">
	    <ImageView android:src="@drawable/negativeman" android:layout_width="wrap_content"
	    android:layout_height="wrap_content" android:gravity="center"></ImageView>
	    <TextView android:id="@+id/gameDetailError" android:layout_width="fill_parent"
	    android:layout_height="wrap_content" android:gravity="center"
	    android:textColor="#ff000000" ></TextView>
	    <EditText android:id="@+id/gameDetailErrorRFGID" android:layout_width="fill_parent"
	    android:layout_height="wrap_content" android:gravity="center"></EditText>
    </LinearLayout>
	
</LinearLayout>